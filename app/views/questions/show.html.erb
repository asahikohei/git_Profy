<div class="row form">
  <div class="col-lg-12">
    <h3><span>Q</span><%= @question.text %></h3>
    <div class="group_action panel panel-default">
      <div class="panel-body">
        <% if @answers.exists?(user_id: current_user.id) %>
          <h4>※回答済みです※</h4>
        <% else %>
          <%= link_to "質問に回答する", new_answer_path, method: :get %>
        <% end %>
      </div>
    </div>
    <% if @answers.exists? %>
      <h3><span>A</span>この質問への回答</h3>
      <%= render partial: "question/answer", collection: @answers %>
    <% end %>
  </div>
</div>