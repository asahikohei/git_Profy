<div class="row form user_profile">
  <div class="col-lg-12">
    <div class="image" style="background-image: url(<%= rails_blob_path(@user.image) %>)"></div>
      <h2><%= "#{@user.family_name}#{@user.first_name}" %><span><%= "#{@user.family_name_kana}#{@user.first_name_kana}" %></span></h2>
      <div class="form-froup">
        <div class="col-lg-6">
          <h3>生年月日：<%= @user.birth_day %></h3>
        </div>
      </div>
      <div class="form-froup">
        <div class="col-lg-6">
          <h3>性別：<%= @user.sex %></h3>
        </div>
      </div>
      <div class="form-froup">
        <div class="col-lg-6">
          <h3>趣味：<%= @user.hobby %></h3>
        </div>
      </div>
    <% if current_user.id == @user.id %>
      <div class="profile_edit">
        <%= link_to "プロフィール編集", edit_user_path(current_user.id), method: :get %>
      </div>
    <% end %>
    <% if @questions.present? %>
      <h3>このユーザーの回答した質問</h3>
      <div class="clearfix">
        <%= render partial: "users/question", collection: @questions %>
      </div>
    <% end %>
  </div>
</div>