<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
      <h2>登録情報</h2>
      <div class="form-group">
        <h3><%= f.label :"名前" %><br /></h3>
          <div class="col-lg-6">
            <%= f.text_field :family_name, placeholder: "姓", class: "form-control" %>
          </div>
          <div class="col-lg-6">
            <%= f.text_field :first_name, placeholder: "名", class: "form-control" %>
          </div>
      </div>
      <div class="form-group">
        <h3><%= f.label :"読み" %><br /></h3>
          <div class="col-lg-6">
            <%= f.text_field :family_name_kana, placeholder: "セイ", class: "form-control" %>
          </div>
          <div class="col-lg-6">
            <%= f.text_field :first_name_kana, placeholder: "メイ", class: "form-control" %>
          </div>
      </div>
      <div class="form-group">
        <h3><%= f.label :"生年月日" %><br /></h3>
          <div class="col-lg-6">
            <%= f.text_field :birth_day, placeholder: "誕生日", class: "form-control" %>
          </div>
      </div>
      <div class="form-group">
        <h3><%= f.label :"趣味" %><br /></h3>
          <div class="col-lg-6">
            <%= f.text_field :hobby, placeholder: "趣味", class: "form-control" %>
          </div>
      </div>
      <div class="form-group">
        <h3><%= f.label :"性別" %><br /></h3>
          <div class="col-lg-6">
            <%= f.text_field :sex, placeholder: "性別", class: "form-control" %>
          </div>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>